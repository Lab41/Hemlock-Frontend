<h3>Roles</h3>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <table class="table table-condensed datatable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Username</th>
          </tr>
        </thead>
        <tbody>
          <% unless @hemlock_roles.nil? %>
            <% @hemlock_roles.each do |role| %>
              <tr>
                <td><%= link_to role.name, admin_hemlock_role_path(role.uuid) if role.uuid %></td>       
                <td><%= role.created.to_date if role.created %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
